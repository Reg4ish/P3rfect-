-- getitem, options, plr, Notify
return function(io)
	local cc, fz = io[1]("Crab Cage"), io[2].e.Value
	if cc then
		if cc.Parent == io[3].Backpack then
			local f = io[3].Character:FindFirstChildOfClass("Tool")
			if f then
				f.Parent = io[3].Backpack
			end
			cc.Parent = io[3].Character
		end
		task.wait()
		local ch = workspace.CurrentCamera:FindFirstChild("Cage")
		if not ch then return io[4]("Invalid Placement!") end
		if ch.hitbox.Color ~= Color3.fromRGB(125, 255, 105) then
			return io[4]("Invalid Placement!")
		end
		io[2].e:SetValue(true)
		repeat 
			local ccc = io[3].Character:FindFirstChild("Crab Cage")
			if ccc then
				ccc.Deploy:FireServer()
			else
				break
			end
			task.wait()
		until cc.Parent ~= io[3].Character
		if not fz then
			io[2].e:SetValue(false)
		end
	end
end
